{
  "description": "Obsidian vault discovery for Claude Code",
  "hooks": {
    "SessionStart": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/vault-index.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Skill(vault-search)",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/validate-vault.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
